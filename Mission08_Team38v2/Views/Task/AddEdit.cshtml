@model Mission08_Team38v2.Models.Task

<h2>@(Model?.TaskId == 0 ? "Add Task" : "Edit Task")</h2>

<form asp-action="@(Model?.TaskId == 0 ? "Add" : "Edit")" asp-controller="Task" method="post">
    <input type="hidden" asp-for="TaskId" />

    <!-- Task Name -->
    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control" required />
    </div>

    <!-- Due Date -->
    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" type="date" />
    </div>

    <!-- Quadrant Dropdown -->
    <div class="form-group">
        <label asp-for="Quadrant"></label>
        <select asp-for="Quadrant" class="form-control" required>
            <option value="1">Quadrant I: Important / Urgent</option>
            <option value="2">Quadrant II: Important / Not Urgent</option>
            <option value="3">Quadrant III: Not Important / Urgent</option>
            <option value="4">Quadrant IV: Not Important / Not Urgent</option>
        </select>
    </div>

    <!-- Category Dropdown (Uses ViewBag) -->
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">-- Select Category --</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>

    <!-- Checkbox for Completed -->
    <div class="form-group form-check">
        <input asp-for="Completed" class="form-check-input" />
        <label asp-for="Completed" class="form-check-label">Completed</label>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Save</button>
</form>
