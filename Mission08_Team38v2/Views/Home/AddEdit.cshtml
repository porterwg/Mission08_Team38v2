<!-- Determines if we're adding or editing a task - if there's a task Id, Edit that specific Task,
if there's no Id, then it's assumed you're adding a new one-->
<!--So the controller should be an add/edit that creates a new task if there is no id, and
if there is an id, it will grab the info for editing-->
<h2>@(Model?.TaskId == null ? "Add Task" : "Edit Task")</h2>

<!-- Form for adding/editing a task, submitting data to a SaveTask action in the Controller
    it should check if the data is valid, and if its a new task add it, otherwise update the existing one
    and then redirect to the Quadrants page after you save.
-->
<form asp-action="SaveTask" asp-controller="TaskController">

    <!-- Task-->
    <div class="form-group">
        <label asp-for="Task"></label>
        <input asp-for="Task" class="form-control" required />
    </div>

    <!-- Due Date-->
    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" />
    </div>

    <!-- Quadrant Dropdown-->
    <div class="form-group">
        <label asp-for="Quadrant"></label>
        <select asp-for="Quadrant" class="form-control" required>
            <option value="1">Quadrant I: Important / Urgent</option>
            <option value="2">Quadrant II: Important / Not Urgent</option>
            <option value="3">Quadrant III: Not Important / Urgent</option>
            <option value="4">Quadrant IV: Not Important / Not Urgent</option>
        </select>
    </div>

    <!--Category Dropdown-->
    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="Category" class="form-control" required>
            <option value="Home">Home</option>
            <option value="School">School</option>
            <option value="Work">Work</option>
            <option value="Church">Church</option>
        </select>
    </div>

    <!--Checkbox for marking the task as completed-->
    <div class="form-group form-check">
        <input asp-for="IsCompleted" class="form-check-input" />
        <label asp-for="IsCompleted" class="form-check-label">Completed</label>
    </div>

    <!--Submit Button-->
    <button type="submit" class="btn btn-primary">Save</button>
</form>

