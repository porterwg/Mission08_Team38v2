                                <a class="btn btn-danger btn-sm" href="/Tasks/Delete/@task.TaskId">Delete</a>
                                <a class="btn btn-success btn-sm" href="/Tasks/Complete/@task.TaskId">Mark as Completed</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Quadrant IV: Not Important / Not Urgent -->
        <div class="col-md-6 mb-4">
            <div class="card" style="background-color: #aec6cf; color: white;">
                <div class="card-header">
